{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EFT Tracker Companion",
  "version": "0.1.5",
  "identifier": "com.eft-tracker.companion",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "EFT Tracker Companion",
        "width": 400,
        "height": 600,
        "resizable": true,
        "minWidth": 350,
        "minHeight": 400,
        "visible": false,
        "skipTaskbar": true,
        "center": true,
        "decorations": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:3000 https://*.eft-tracker.com https://eft-tracker.vercel.app; img-src 'self' data:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/andrew-tucker-razorvision/EFT-Tracker/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlEREZDQTlBQ0Q0MENEMzAKUldRd3pVRE5tc3Jmblp5M25YREd4MEJ1eEdqVUpaN0ZKREV3eGQvazQyNHk0YkRWTzg1SlhPemkK"
    }
  }
}
