{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EFT Tracker Companion",
  "version": "0.1.0",
  "identifier": "com.eft-tracker.companion",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "EFT Tracker Companion",
        "width": 400,
        "height": 600,
        "resizable": true,
        "minWidth": 350,
        "minHeight": 400,
        "visible": false,
        "center": true,
        "decorations": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.eft-tracker.com https://eft-tracker.vercel.app; img-src 'self' data:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "autostart": {
      "macOSExtraArgs": ["--flag1", "flag2"]
    },
    "notification": {},
    "store": {}
  }
}
