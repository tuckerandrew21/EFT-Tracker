{
  "extends": "../../packages/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@eft-tracker/types": ["../../packages/types/src"],
      "@eft-tracker/types/*": ["../../packages/types/src/*"],
      "@eft-tracker/utils": ["../../packages/utils/src"],
      "@eft-tracker/utils/*": ["../../packages/utils/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules", "prisma", "dist", "tests"]
}
